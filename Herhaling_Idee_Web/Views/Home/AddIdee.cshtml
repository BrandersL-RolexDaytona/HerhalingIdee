@model HerhalingIdee_Domain.Business.IdeePersoon

@{
    ViewData["Title"] = "AddIdee";
}

<h1>Dit is de ideeënbus</h1>

<h4>Vul de velden volledig aan!</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddIdeetje">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NaamPersoon" class="control-label"></label>
                <input asp-for="NaamPersoon" class="form-control" />
                <span asp-validation-for="NaamPersoon" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TelPersoon" class="control-label"></label>
                <input asp-for="TelPersoon" class="form-control" />
                <span asp-validation-for="TelPersoon" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Idee" class="control-label"></label>
                <input asp-for="Idee" class="form-control" />
                <span asp-validation-for="Idee" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
